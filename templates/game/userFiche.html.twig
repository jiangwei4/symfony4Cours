{% extends 'base.html.twig' %}
{% block title %}Hello !{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% if user is not null %}
        Fiche de : {{ user.firstname}} {{ user.lastname }}
        <br />
        Email : {{ user.email }}
        <br />
        Née le : {{ user.birthday|date('d/m/y') }}
        <br><br>
        Article(s) :
        <ul>
            {% for article in user.articles %}
                <li>
                    <h4>{{ article.title }}</h4>
                    <i>Crée le {{ article.createdAt|date('d/m/y')}} à {{ article.createdAt|date('h:i') }}</i>
                    <p>
                        {{ article.content }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        Pas d'utilisateur correspondant à cet ID.
    {% endif %}
{% endblock %}
